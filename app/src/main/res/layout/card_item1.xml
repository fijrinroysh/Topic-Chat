<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="100dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view1">

        <ImageView
            android:id="@+id/sender_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/profile"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sender_photo"
            android:textSize="15sp"
            android:textColor="@color/text_color"/>


        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/subscribe"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/message_time"
            android:layout_alignParentRight="true"
            android:src="@mipmap/subscribe_icon"
            />
        <TextView
            android:id="@+id/sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sender_photo"

            android:layout_below="@+id/sender_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_toLeftOf="@+id/message_time"
            android:layout_margin="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>